<%  include ../partials/header %>

<div class="container">
   <div class="row">
    <h1 style="text-align: center">Create a new campgound</h1>

    <form action="/campground", method="POST" class="newform" >
        <div class="form-group">
           <input class="form-control" type="text" name="name" placeholder ="campground name">
           </div>
           <div class="form-group">
           <input class="form-control" type="number" name="price" placeholder ="campground price" min="0.01" step="0.01">
           </div>           
           <div class="form-group">
           <input class="form-control" type="text" name="url" placeholder ="campground url">
           </div>
           <div class="form-group">
           <input class="form-control" type="text" name="descript" placeholder ="What is it like?">
           </div>
           <div class="form-group">
           <button class="btn btn-lg btn-primary">submit</button>
         </div>
    </form>
    
    <a href="/campground">Back to campground</a>
    </div>
</div>
